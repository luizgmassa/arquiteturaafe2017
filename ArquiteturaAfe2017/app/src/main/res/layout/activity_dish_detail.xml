<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.motorola.eldorado.arquiteturaafe2017.view.DishDetailsActivity">

    <ImageView
        android:id="@+id/activity_dish_detail_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:contentDescription="" />

    <TextView
        android:id="@+id/activity_dish_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dish_detail_image"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/activity_dish_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dish_detail_name"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/activity_dish_detail_side_dishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dish_detail_description"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/activity_dish_detail_mixtures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dish_detail_side_dishes"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/activity_dish_detail_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dish_detail_mixtures"
        android:layout_margin="10dp"
        android:text="@string/drink" />

    <TextView
        android:id="@+id/activity_dish_detail_selected_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_dish_detail_no_drink_selected"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/activity_dish_detail_drink"
        android:layout_alignBottom="@+id/activity_dish_detail_drink"
        android:layout_toEndOf="@+id/activity_dish_detail_drink" />

    <Button
        android:id="@+id/activity_dish_detail_drinks_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_drinks"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/activity_dish_detail_drink"
        android:layout_alignBottom="@+id/activity_dish_detail_drink"
        android:layout_alignEnd="@+id/activity_dish_detail_payment" />

    <Button
        android:id="@+id/activity_dish_detail_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/activity_dish_detail_drinks_button"
        android:layout_margin="10dp"
        android:text="@string/button_payment" />

    <Button
        android:id="@+id/activity_dish_detail_edit_dish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/activity_dish_detail_drinks_button"
        android:layout_margin="10dp"
        android:text="@string/button_edit_dish" />

</RelativeLayout>
