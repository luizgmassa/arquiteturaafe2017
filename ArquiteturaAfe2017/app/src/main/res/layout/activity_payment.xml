<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.motorola.eldorado.arquiteturaafe2017.view.PaymentActivity">

    <include
        android:id="@+id/activity_payment_common_details"
        layout="@layout/dish_details" />

    <Spinner
        android:id="@+id/activity_payment_payment_methods_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_payment_common_details" />

    <TextView
        android:id="@+id/activity_payment_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_payment_payment_methods_spinner"
        android:layout_margin="10dp"
        android:text="@string/activity_payment_value" />

    <TextView
        android:id="@+id/activity_payment_value_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_payment_value_text_view"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/activity_payment_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_payment_value_final"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/activity_payment_order" />

</RelativeLayout>
