<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.motorola.eldorado.arquiteturaafe2017">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.EntrypointActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.DishesActivity" />
        <activity android:name=".view.base.BaseActivity" />
        <activity
            android:name=".view.DishDetailsActivity"
            android:label="@string/title_activity_dish_detail"
            android:parentActivityName=".view.DishesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.motorola.eldorado.arquiteturaafe2017.view.DishesActivity" />
        </activity>
        <activity android:name=".view.DrinksActivity"></activity>
    </application>

</manifest>